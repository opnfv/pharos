    opnfv_openstack_database_address: {{ net_mgmt | ipaddr_index(50) }}
    opnfv_openstack_database_node01_address: {{ net_mgmt | ipaddr_index(51) }}
    opnfv_openstack_database_node02_address: {{ net_mgmt | ipaddr_index(52) }}
